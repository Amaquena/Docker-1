docker run -d -it --name Abathur -v ~/:/root -p "$(docker-machine ip char)":3000:3000 python:2-slim
docker exec Abathur pip install Flask
docker exec Abathur sh -c "echo 'from flask import Flask\napp = Flask(__name__)\n\n@app.route(\"/\")\n\tdef hello():\n\t\treturn \"<h1>Hello World<h1>\"\n\nif __name__ == "__main__":\n\tapp.run()' > ~/hello.py"
docker exec -e FLASK_APP=/root/hello.py Abathur flask run --host=0.0.0.0 --port 3000